; Name: Select:762
; Pre: isPowerOf2(C) && isPowerOf2(C2-C3) && log2(C) < width(C2)
; %lhs = and %Op, C
; %c = icmp eq %lhs, 0
; %s = select %c, C2, C3
;   =>
; %v0 = ZExtOrTrunc %lhs to i11
; %v = shl %v0, max(0, log2(C2-C3) - log2(C))
; %v2 = lshr %v, max(0, log2(C) - log2(C2-C3))
; %x = xor %v2, C2-C3
; %s = add %x, C3

%Op:i16 = var
%lhs = and %Op, 256
%c = eq %lhs, 0
%r = select %c, 2564:i13, 2500
infer %r
%v0:i13 = trunc %lhs
%v = shl %v0, 0
%v2 = lshr %v, 2
%x = xor %v2, 64
%r2 = add %x, 2500
result %r2

