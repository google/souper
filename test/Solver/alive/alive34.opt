; Name: Select:740
; %c = icmp sgt %A, 0
; %minus = sub 0, %A
; %abs = select %c, %A, %minus
; %c2 = icmp sgt %abs, -1
; %minus2 = sub 0, %abs
; %abs2 = select %c2, %abs, %minus2
;   =>
; %abs2 = select %c, %A, %minus

%A:i32 = var
%c = slt 0, %A
%minus = sub 0, %A
%abs = select %c, %A, %minus
%c2 = slt -1, %abs
%minus2 = sub 0, %abs
%r = select %c2, %abs, %minus2
infer %r
%r2 = select %c, %A, %minus
result %r2

