; Name: Select:846
; %A = select %B, true, %C
;   =>
; %A = or %B, %C

%B:i1 = var
%C:i1 = var
%r = select %B, 1, %C
infer %r
%r2 = or %B, %C
result %r2

; Name: Select:850
; %A = select %B, false, %C
;   =>
; %notb = xor %B, true
; %A = and %notb, %C

%B:i1 = var
%C:i1 = var
%r = select %B, 0, %C
infer %r
%notb = xor %B, 1
%r2 = and %notb, %C
result %r2
