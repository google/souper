; Name: Select:855
; %A = select %B, %C, false
;   =>
; %A = and %B, %C

%B:i1 = var
%C:i1 = var
%r = select %B, %C, 0
infer %r
%r2 = and %B, %C
result %r2

; Name: Select:859
; %A = select %B, %C, true
;   =>
; %notb = xor %B, true
; %A = or %notb, %C

%B:i1 = var
%C:i1 = var
%r = select %B, %C, 1
infer %r
%notb = xor %B, 1
%r2 = or %notb, %C
result %r2

