; REQUIRES: solver, synthesis
; RUN: %souper-check -infer-rhs -souper-exhaustive-synthesis -souper-use-alive -souper-synthesis-const-with-cegis %solver %s > %t1
; RUN: %FileCheck %s < %t1

; CHECK: mul 6:i32, %0
%0:i32 = var
%1:i32 = mul %0, 2:i32
%2:i32 = mul %1, 3:i32
infer %2

; CHECK: add 5:i64, %0
%0:i64 = var
%1:i64 = add %0, 2:i64
%2:i64 = add %1, 3:i64
infer %2

; a pair of consts
; CHECK: select %1, 0:i32, 17:i32
%0:i32 = var
%1:i1 = var
%2:i32 = sub %0, %0
%3:i32 = add %2, 17:i32
%4:i32 = select %1, %2, %3
infer %4
