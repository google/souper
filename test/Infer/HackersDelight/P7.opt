; REQUIRES: synthesis

; RUN: %souper-check -infer-rhs -souper-infer-inst -souper-synthesis-ignore-cost -souper-synthesis-comps=const,xor,and,add %s > %t1
; RUN: %FileCheck %s < %t1

; CHECK:      %4:i32 = {{(xor|and)}} %0, %2
; CHECK-NEXT: %5:i32 = {{(and|xor)}} %2, %4
; CHECK-NEXT: result %5

; Isolate the rightmost 0-bit
%0:i32 = var
%1:i32 = xor %0, -1
%2:i32 = add %0, 1
%3:i32 = and %1, %2
infer %3
