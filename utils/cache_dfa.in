}

my $NONNEG = 0;
my $NEG = 0;
my $KNOWNBITS = 0;
my $POWERTWO = 0;
my $NONZERO = 0;
my $SIGNBITS = 0;
my $noopt_count=0;
my %values;
my %sprofiles;
my %dprofiles;
