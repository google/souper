sub runit ($) {
    my $cmd = shift;
    my $res = (system "$cmd");
    return $? >> 8;
}

sub usage() {
    print <<'END';
Options:
  -neg         Infer Neg DFA
  -nonneg      Infer nonNegative DFA
  -nonzero     Infer non Zero DFA
  -power       Infer power of two DFA
  -knownbits   Infer known bits DFA
  -signBits    Infer number of sign bits DFA
END
